<h1>Update Figure</h1>

<form action="/figures/<%= @figure.id %>" method="POST">
  <label for="figure_name">Figure Name:</label>
  <input type="text" name="figure[name]" id="figure_name" value="<%= @figure.name %>">
  <br></br>
  <label>Choose existing title(s):</label>
  <br></br>
  <% @titles.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" id="title_<%= title.id %>" <%= 'checked' if @figure.titles.include?(title) %>><%= title.name %>
  <% end %>
  <br></br>
  <label>and/or, create a new title:</label>
  <br></br>
  <label for="new_title">Title Name:</label>
  <input type="text" name="title[name]" id="new_title">
  <br></br>
  <label>Choose existing landmark(s):</label>
  <br></br>
  <% @landmarks.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" id="landmark_<%= landmark.id %>" <%= 'checked' if @figure.landmarks.include?(landmark) %>><%= landmark.name %>
  <% end %>
  <br></br>
  <label>and/or, create a new landmark:</label>
  <br></br>
  <label for="new_landmark">Landmark Name:</label>
  <input type="text" name="landmark[name]" id="new_landmark">
  <br></br>
  <input type="submit" value="Edit Figure">
</form>
